offspring(X,Y) :-
    parent(Y,X).
son(X,Y) :-
    offspring(X,Y),
    male(Y).
daughter(X,Y) :-
    offspring(X,Y),
    female(Y).

parent(X,Y) :-
    offspring(Y,X).
father(X,Y) :-
    parent(X,Y),
    male(Y).
mother(X,Y) :-
    parent(X,Y),
    female(Y).

grandparent(X,Y) :-
    parent(X,Z),
    parent(Z,Y).
grandfather(X,Y) :-
    grandparent(X,Y),
    male(Y).
grandmother(X,Y) :-
    grandparent(X,Y),
    female(Y).

ancestor(X,Y) :-
    parent(X,Y).
ancestor(X,Y) :-
    ancestor(X,Z),
    ancestor(Z,Y).

has(X,offspring,Y)   :- offspring(X,Y).
has(X,son,Y)         :- son(X,Y).
has(X,daughter,Y)    :- daughter(X,Y).
has(X,parent,Y)      :- parent(X,Y).
has(X,father,Y)      :- father(X,Y).
has(X,mother,Y)      :- mother(X,Y).
has(X,grandparent,Y) :- grandparent(X,Y).
has(X,grandfather,Y) :- grandfather(X,Y).
has(X,grandmother,Y) :- grandmother(X,Y).
has(X,ancestor,Y)    :- ancestor(X,Y).
